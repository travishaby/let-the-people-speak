<div id="container"></div>

<form role="form" action="/" method="post">
  Poll Question:<br>
  <input type="text" name="poll[question]" placeholder="enter a name">
  <br>Poll Choice 1:<br>
  <input class="choice" type="text" name="poll[choices][choice1]" placeholder="enter a choice">
  <br>Poll Choice 2:<br>
  <input class="choice" type="text" name="poll[choices][choice2]" placeholder="enter a choice">
  <br>
  <br>
  <button class="new-choice" type="button" name="button">Add Poll Choice</button>
  <br>
  <br>
  Poll defaults to close in one hour. Specificy a timeout below:
  <br>
  <input type="number" name="poll[timeout][number]" min="1" max="10">
  <select name="poll[timeout][units]">
    <option value="m">Minutes</option>
    <option value="h">Hours</option>
    <option value="d">Days</option>
  </select>
  <br>
  <br>
  <input type="checkbox" name="poll[showRespondants]" value="true">Show poll respondants the results?
  <br>
  <br>
  <input type="submit" value="Submit">
</form>

<script src="/createPoll.js"></script>
